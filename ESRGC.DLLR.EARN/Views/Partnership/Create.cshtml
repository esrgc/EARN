@model ESRGC.DLLR.EARN.Domain.Model.Partnership

@{
    ViewBag.Title = "Partnership";
    ViewBag.Header = "Create Partnership";
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval-unobtrusive")
}

@section header {
    <div class="container">
        <header class="page-header">
            <h3>@ViewBag.Header <i class="glyphicon glyphicon-link"></i></h3>
            @*<ul class="breadcrumb">
                <li><a href="@Url.Action("index", "Home")">Home</a></li>
                <li class="active">@ViewBag.Header</li>
            </ul>*@
        </header>
    </div>
}
@{
    var statusList = new List<string>() { 
        "Initiating",
        "Partnering/drafting proposal",
        "Partnered/proposed"
    };
    var grantStatusList = new List<string>() { 
        "Pre-draft",
        "Drafting",
        "Submitted",
        "Awarded"
    };
}

<div class="container">
    <div class="row">
        <div class="col-sm-10 col-sm-offset-1">
            <div class="window-panel">
                <div class="window-panel-title"><strong>Partnership Information</strong></div>
                <div class="window-panel-content">

                    <form class="form-horizontal" action="@Url.Action("Create")" method="post" role="form">
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        <div class="form-group">
                            <div class="col-sm-8 col-sm-offset-2">
                                <p class="text-info">
                                    Please fill out the form below to create a new partnership. 
                                    Your organization will be the convener of this partnership.
                                    After the partnership is created, you will be able to invite
                                    other organizations to your partnership. Other organizations will be 
                                    able to search and request to join partnership.
                                </p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-2" for="Name">Name</label>
                            <div class="col-sm-6">
                                @Html.TextBoxFor(x => x.Name,
                                new {
                                    @class = "form-control input-sm",
                                    placeholder = "Partnership name"
                                })
                                <span class="label label-default">Required</span>
                                <div class="help-block">@Html.ValidationMessageFor(x => x.Name)</div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-2" for="Status">Status</label>
                            <div class="col-sm-4">
                                @Html.DropDownListFor(x => x.Status,
                                new SelectList(statusList),
                                new {
                                    @class = "form-control input-sm",
                                    placeholder = "Status"
                                })
                                <span class="label label-default">Required</span>
                                <div class="help-block">@Html.ValidationMessageFor(x => x.Status)</div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-2" for="GrantStatus">Grant status</label>
                            <div class="col-sm-4">
                                @Html.DropDownListFor(x => x.GrantStatus,
                                new SelectList(grantStatusList),
                                new {
                                    @class = "form-control input-sm",
                                    placeholder = "Awarded, Pending...ect."
                                })
                                <span class="label label-default">Required</span>
                                <div class="help-block">@Html.ValidationMessageFor(x => x.GrantStatus)</div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-2" for="Description">Description</label>
                            <div class="col-sm-8">
                                @Html.TextAreaFor(x => x.Description,
                                new {
                                    @class = "form-control input-sm",
                                    placeholder = "Briefly describe this partnership",
                                    style = "min-height: 150px"
                                })
                                <span class="label label-default">Required</span>
                                <div class="help-block">@Html.ValidationMessageFor(x => x.Description)</div>
                            </div>
                        </div>
                        <hr />
                        <div class="form-group">
                            <div class="col-sm-6 col-sm-offset-3">
                                <input class="btn btn-primary" type="submit" value="Submit" />
                                <a class="btn btn-default" href="@Url.Action("Detail", "Profile")">Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
