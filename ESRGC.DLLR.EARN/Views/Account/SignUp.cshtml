<div class="container">
    <div class="row">
        <div class="col-sm-10 col-sm-offset-1">
            <div class="window-panel">
                <div class="window-panel-title">
                    <strong><i class="fa fa-user"></i>&nbsp;New member</strong>
                </div>
                <div class="window-panel-content">
                    @using (Html.BeginForm("SignUp", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" })) {
                        @Html.ValidationSummary(true)
                        <div class="form-group">
                            <label for="Email" class="col-sm-3 control-label">Email</label>
                            <div class="col-sm-6">
                                @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "Email", type = "email" })
                                <span class="label label-default">Required</span>
                                <span class="help-block">
                                    @Html.ValidationMessageFor(x => x.Email)
                                </span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="Password" class="col-sm-3 control-label">Password</label>
                            <div class="col-sm-6">
                                @Html.PasswordFor(x => x.Password, new { @class = "form-control", placeholder = "Password" })
                                <span class="label label-default">Required</span>
                                <span class="help-block">@Html.ValidationMessageFor(x => x.Password)</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="ConfirmPassword" class="col-sm-3 control-label">Confirm password</label>
                            <div class="col-sm-6">
                                @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm your password" })
                                <span class="label label-default">Required</span>
                                <span class="help-block">@Html.ValidationMessageFor(x => x.ConfirmPassword)</span>
                            </div>
                        </div>
                        @*<div class="form-group">
                            <div class="alert alert-info col-sm-10 col-sm-offset-1">
                                <h4>Terms and Conditions</h4>
                                <p>
                                    By clicking “Sign up”, you understand that the information you provide will 
                                    be in the public domain and will be accessible to other EARN MD CONNECT users. 
                                    The information you provide will only be used by the Maryland Department of Labor, Licensing, and Regulation
                                    to facilitate the EARN program. The information within the EARN MD CONNECT system will not be distributed
                                    or shared for any purpose other than facilitating the EARN program.
                                </p>
                                <div class="checkbox">
                                    <label>
