@section header {
    <div class="container">
        <header class="page-header">
            <h3>@ViewBag.Header <i class="fa fa-edit"></i></h3>
            @* <ul class="breadcrumb">
                <li><a href="@Url.Action("index", "Home")">Home</a></li>
