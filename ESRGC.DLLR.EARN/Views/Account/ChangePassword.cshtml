@model ESRGC.DLLR.EARN.Models.ChangePasswordModel

@{
    ViewBag.Title = "Account";
    ViewBag.Header = "Change Password";
}
@section header{
    <div class="container">
        <header class="page-header">
            <h3>@ViewBag.Header <i class="fa fa-lock"></i></h3>
            @*<ul class="breadcrumb">
                <li><a href="@Url.Action("index", "Home")">Home</a></li>
                <li class="active">@ViewBag.Header</li>
            </ul>*@
        </header>
    </div>
}
@section scripts{
    @Scripts.Render("~/bundles/jqueryval-unobtrusive")
}

<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <p class="text-info">
                Password must be at least 6 characters long. All special characters are allowed.
            </p>
            <div class="window-panel">
                <div class="window-panel-title">
                    <strong>Change Password Form</strong>
                </div>
                <div class="window-panel-content">

                    <form class="form-horizontal" action="@Url.Action("ChangePassword")" method="post">
                        @Html.ValidationSummary()
                        <div class="form-group">
                            <label class="control-label col-md-3" for="OldPassword">Current password</label>
                            <div class="col-md-6">
                                @Html.PasswordFor(x => x.OldPassword, new { @class = "form-control input-sm", placeholder = "Current password" })
                                <span class="label label-default">Required</span>
                                <div class="help-block">@Html.ValidationMessageFor(x => x.OldPassword)</div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3" for="NewPassword">New password</label>
                            <div class="col-md-6">
                                @Html.PasswordFor(x => x.NewPassword, new { @class = "form-control input-sm", placeholder = "New password" })
                                <span class="label label-default">Required</span>
                                <div class="help-block">@Html.ValidationMessageFor(x => x.NewPassword)</div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3" for="ConfirmPassword">Confirm password</label>
                            <div class="col-md-6">
                                @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control input-sm", placeholder = "Confirm password" })
                                <span class="label label-default">Required</span>
                                <div class="help-block">@Html.ValidationMessageFor(x => x.ConfirmPassword)</div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-8 col-md-offset-3">
                                <button class="btn btn-primary" type="submit">Change password</button>
                                <a class="btn btn-default" href="@Url.Action("Settings")">Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
