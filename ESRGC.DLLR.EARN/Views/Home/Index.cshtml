@{
    ViewBag.Title = "Home";
    ViewBag.showSignin = true;
}

@section scripts {
    <script type="text/ecmascript">
        var startup = function () {
            $(document).on('click', '#agreeTDChbox', function () {
                $('#proceedBtn').removeAttr('disabled');
            });
            $(document).on('click', '#proceedBtn', function () {
                $('form#quickSignupForm').submit();
            });
            $(document).on('keypress', 'form#quickSignupForm', function (e) {
                if (e.keyCode == 13) {
                    $('#agreeToSignup').modal('show');
                }
            });
        };
    </script>
}

